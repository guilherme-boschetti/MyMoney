<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?themeAppScreenBackground"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:alignContent="center"
            app:flexWrap="wrap"
            app:justifyContent="center">

            <!-- Green (Default) -->

            <androidx.cardview.widget.CardView
                android:id="@+id/theme_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="25dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="@dimen/theme_card_width"
                    android:layout_height="@dimen/theme_card_height"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:text="@string/default_with_brackets"
                        android:textColor="@color/black_10"
                        android:textSize="12sp"
                        tools:ignore="TextContrastCheck" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="@string/green"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_text_size"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/colorAccent" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Red -->

            <androidx.cardview.widget.CardView
                android:id="@+id/theme_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="25dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="@dimen/theme_card_width"
                    android:layout_height="@dimen/theme_card_height"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimaryDarkRed" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="@color/colorPrimaryRed"
                        android:gravity="center"
                        android:text="@string/red"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_text_size"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/colorAccent" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Blue -->

            <androidx.cardview.widget.CardView
                android:id="@+id/theme_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="25dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="@dimen/theme_card_width"
                    android:layout_height="@dimen/theme_card_height"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimaryDarkBlue" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="@color/colorPrimaryBlue"
                        android:gravity="center"
                        android:text="@string/blue"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_text_size"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/colorAccent" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Pink -->

            <androidx.cardview.widget.CardView
                android:id="@+id/theme_pink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="25dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="@dimen/theme_card_width"
                    android:layout_height="@dimen/theme_card_height"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimaryDarkPink" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="@color/colorPrimaryPink"
                        android:gravity="center"
                        android:text="@string/pink"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_text_size"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/colorAccent" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Purple -->

            <androidx.cardview.widget.CardView
                android:id="@+id/theme_purple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="25dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="@dimen/theme_card_width"
                    android:layout_height="@dimen/theme_card_height"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimaryDarkPurple" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="@color/colorPrimaryPurple"
                        android:gravity="center"
                        android:text="@string/purple"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_text_size"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/colorAccent" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- -->

        </com.google.android.flexbox.FlexboxLayout>

    </FrameLayout>

</ScrollView>